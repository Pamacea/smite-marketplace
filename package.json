{
  "name": "smite",
  "version": "4.0.0",
  "description": "SMITE - Multi-agent orchestration with 4-flag composable system",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:toolkit": "npm run test --workspace=plugins/toolkit",
    "test:ralph": "npm run test --workspace=plugins/ralph",
    "test:coverage": "npm run test --workspaces --if-present -- --coverage",
    "lint": "npm run lint --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf plugins/*/dist plugins/*/node_modules"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "smite",
    "claude-code",
    "multi-agent",
    "refactoring",
    "code-quality",
    "unified-agents"
  ],
  "author": "Pamacea",
  "license": "MIT"
}
