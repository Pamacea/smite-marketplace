{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smite.dev/schemas/quality-gate-config.json",
  "title": "Quality Gate Configuration Schema",
  "description": "Configuration schema for the Smite Quality Gate system. Controls code quality validation, complexity thresholds, security rules, and documentation triggers.",
  "type": "object",
  "required": ["enabled"],
  "properties": {
    "enabled": {
      "description": "Master toggle for the quality gate system. When false, all validations are bypassed.",
      "type": "boolean",
      "default": true
    },
    "logLevel": {
      "description": "Logging verbosity level. Controls which messages are output to the console.",
      "type": "string",
      "enum": ["debug", "info", "warn", "error"],
      "default": "info"
    },
    "maxRetries": {
      "description": "Maximum number of retry attempts when code validation fails. Each retry provides context-aware feedback to Claude.",
      "type": "integer",
      "minimum": 0,
      "maximum": 10,
      "default": 3
    },
    "include": {
      "description": "Glob patterns for files to include in validation. Supports * and ** wildcards.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[^*]*\\*\\*?[^*]*$|^\\*\\*\\/.*$"
      },
      "minItems": 1,
      "default": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
    },
    "exclude": {
      "description": "Glob patterns for files to exclude from validation. Takes precedence over include patterns.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**"
      ]
    },
    "complexity": {
      "description": "Complexity analysis thresholds. Functions exceeding these thresholds will trigger validation issues.",
      "type": "object",
      "properties": {
        "maxCyclomaticComplexity": {
          "description": "Maximum cyclomatic complexity per function. Measures the number of linearly independent paths through the code.",
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 10
        },
        "maxCognitiveComplexity": {
          "description": "Maximum cognitive complexity per function. Measures how difficult the code is to understand.",
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 15
        },
        "maxNestingDepth": {
          "description": "Maximum nesting depth of control structures (if/for/while/switch).",
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "default": 4
        },
        "maxFunctionLength": {
          "description": "Maximum function length in lines of code.",
          "type": "integer",
          "minimum": 1,
          "maximum": 500,
          "default": 50
        },
        "maxParameterCount": {
          "description": "Maximum number of function parameters. High parameter counts indicate complex interfaces.",
          "type": "integer",
          "minimum": 0,
          "maximum": 20,
          "default": 5
        }
      },
      "additionalProperties": false
    },
    "semantics": {
      "description": "Semantic analysis configuration. Validates code consistency and conventions.",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Enable semantic checks.",
          "type": "boolean",
          "default": true
        },
        "checks": {
          "description": "Individual semantic check configurations.",
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "enabled"],
            "properties": {
              "type": {
                "description": "Type of semantic check.",
                "type": "string",
                "enum": [
                  "api-contract",
                  "type-consistency",
                  "naming",
                  "duplicate-code"
                ]
              },
              "enabled": {
                "description": "Enable this specific check.",
                "type": "boolean"
              },
              "severity": {
                "description": "Severity level for violations.",
                "type": "string",
                "enum": ["error", "warning"],
                "default": "error"
              }
            },
            "additionalProperties": false
          },
          "default": [
            { "type": "api-contract", "enabled": true, "severity": "error" },
            { "type": "type-consistency", "enabled": true, "severity": "error" },
            { "type": "naming", "enabled": false, "severity": "warning" },
            { "type": "duplicate-code", "enabled": false, "severity": "warning" }
          ]
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "security": {
      "description": "Security vulnerability scanning configuration. Uses pattern matching to detect common security issues.",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Enable security scanning.",
          "type": "boolean",
          "default": true
        },
        "rules": {
          "description": "Individual security rule configurations.",
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "enabled"],
            "properties": {
              "id": {
                "description": "Security rule identifier.",
                "type": "string",
                "enum": [
                  "sql-injection",
                  "xss-vulnerability",
                  "weak-crypto",
                  "hardcoded-secret"
                ]
              },
              "enabled": {
                "description": "Enable this specific security rule.",
                "type": "boolean"
              },
              "severity": {
                "description": "Override severity for this rule.",
                "type": "string",
                "enum": ["critical", "error", "warning"]
              },
              "customPattern": {
                "description": "Custom regex pattern to override default detection.",
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "default": [
            { "id": "sql-injection", "enabled": true },
            { "id": "xss-vulnerability", "enabled": true },
            { "id": "weak-crypto", "enabled": true },
            { "id": "hardcoded-secret", "enabled": true }
          ]
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "tests": {
      "description": "Automated test execution configuration. Runs tests before allowing code changes.",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Enable automatic test execution.",
          "type": "boolean",
          "default": false
        },
        "command": {
          "description": "Custom test command. Overrides automatic framework detection.",
          "type": "string"
        },
        "framework": {
          "description": "Test framework to use. Auto-detected if not specified.",
          "type": "string",
          "enum": ["jest", "vitest", "mocha", "pytest", "none"]
        },
        "timeoutMs": {
          "description": "Maximum time to wait for test execution in milliseconds.",
          "type": "integer",
          "minimum": 1000,
          "maximum": 600000,
          "default": 60000
        },
        "failOnTestFailure": {
          "description": "Deny code changes when tests fail.",
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "mcp": {
      "description": "MCP (Model Context Protocol) integration for automated documentation generation.",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Enable MCP documentation triggers.",
          "type": "boolean",
          "default": false
        },
        "serverPath": {
          "description": "Path to the MCP documentation server.",
          "type": "string",
          "default": "./node_modules/@smite/docs-editor-mcp/dist/index.js"
        },
        "triggers": {
          "description": "Documentation trigger configurations.",
          "type": "object",
          "properties": {
            "openAPI": {
              "description": "OpenAPI/Swagger specification generation.",
              "type": "object",
              "properties": {
                "enabled": {
                  "description": "Enable OpenAPI documentation generation.",
                  "type": "boolean",
                  "default": true
                },
                "filePatterns": {
                  "description": "Glob patterns for API route files to document.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": [
                    "**/routes/**/*.ts",
                    "**/api/**/*.ts",
                    "**/controllers/**/*.ts",
                    "**/pages/api/**/*.ts"
                  ]
                },
                "frameworks": {
                  "description": "Web frameworks to support for API documentation.",
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["express", "nextjs", "fastify", "koa"]
                  },
                  "default": ["express", "nextjs"]
                }
              },
              "additionalProperties": false
            },
            "readme": {
              "description": "README.md documentation generation.",
              "type": "object",
              "properties": {
                "enabled": {
                  "description": "Enable README documentation generation.",
                  "type": "boolean",
                  "default": true
                },
                "filePatterns": {
                  "description": "Glob patterns for files that trigger README updates.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": [
                    "**/src/**/*.ts",
                    "**/lib/**/*.ts",
                    "**/core/**/*.ts",
                    "package.json"
                  ]
                }
              },
              "additionalProperties": false
            },
            "jsdoc": {
              "description": "JSDoc comment generation.",
              "type": "object",
              "properties": {
                "enabled": {
                  "description": "Enable JSDoc generation.",
                  "type": "boolean",
                  "default": true
                },
                "filePatterns": {
                  "description": "Glob patterns for files requiring JSDoc.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "output": {
      "description": "Output formatting and display options.",
      "type": "object",
      "properties": {
        "format": {
          "description": "Output format for validation results.",
          "type": "string",
          "enum": ["json", "text"],
          "default": "text"
        },
        "includeCodeSnippets": {
          "description": "Include code snippets in validation output.",
          "type": "boolean",
          "default": true
        },
        "maxSuggestions": {
          "description": "Maximum number of suggestions to display per issue.",
          "type": "integer",
          "minimum": 0,
          "maximum": 20,
          "default": 5
        }
      },
      "additionalProperties": false
    },
    "overrides": {
      "description": "Per-file or per-directory configuration overrides. Allows different rules for specific files or directories.",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["files"],
        "properties": {
          "files": {
            "description": "Glob pattern matching files to override.",
            "type": "string"
          },
          "complexity": {
            "$ref": "#/properties/complexity"
          },
          "security": {
            "$ref": "#/properties/security"
          },
          "semantics": {
            "$ref": "#/properties/semantics"
          },
          "tests": {
            "$ref": "#/properties/tests"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
