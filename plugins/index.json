{
  "version": "1.0.0",
  "lastUpdated": "2025-01-19",
  "plugins": [
    {
      "id": "@smite/quality-gate",
      "name": "Quality Gate",
      "version": "1.0.0",
      "description": "Code quality gate system with complexity, semantic, and security validation for Claude Code",
      "author": "Pamacea",
      "license": "MIT",
      "homepage": "https://github.com/pamacea/smite#quality-gate",
      "repository": "https://github.com/pamacea/smite",
      "bugs": "https://github.com/pamacea/smite/issues",
      "category": "quality",
      "tags": [
        "quality-gate",
        "code-review",
        "static-analysis",
        "security",
        "complexity",
        "testing",
        "validation"
      ],
      "smite": {
        "minVersion": "1.0.0",
        "type": "hook",
        "hook": "PreToolUse",
        "entryPoint": "./dist/judge-hook.js",
        "configFile": ".claude/.smite/quality.json",
        "autoInstall": true
      },
      "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4",
        "typescript": "^5.3.0",
        "zod": "^3.24.1"
      },
      "devDependencies": {
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "prettier": "^3.8.0"
      },
      "features": [
        "Complexity Analysis - Detects high cyclomatic and cognitive complexity",
        "Security Scanning - Identifies SQL injection, XSS, weak crypto, and hardcoded secrets",
        "Semantic Checks - Validates naming conventions and type consistency",
        "Feedback Loop - Automatic retry with context-aware correction prompts",
        "Audit Trail - Logs all validation results for review"
      ],
      "installation": {
        "type": "npm",
        "location": "plugins/quality-gate",
        "commands": [
          "cd plugins/quality-gate",
          "npm install",
          "npm run build",
          "npm run install-hook"
        ],
        "verification": "test -f .smite/hooks/pre-tool-use/judge-hook.js"
      },
      "compatibility": {
        "node": ">=18.0.0",
        "typescript": ">=5.0.0",
        "os": ["win32", "darwin", "linux"]
      },
      "documentation": "plugins/quality-gate/README.md",
      "changelog": [
        {
          "version": "1.0.0",
          "date": "2025-01-19",
          "changes": [
            "Initial release",
            "Complexity analysis with cyclomatic and cognitive metrics",
            "Security scanning for common vulnerabilities",
            "Semantic validation for TypeScript",
            "AST-based code parsing",
            "Configurable rules and thresholds"
          ]
        }
      ]
    },
    {
      "id": "@smite/docs-editor-mcp",
      "name": "Docs Editor MCP",
      "version": "1.0.0",
      "description": "MCP server for automatic documentation maintenance (OpenAPI sync, README updates, JSDoc generation)",
      "author": "Smite",
      "license": "MIT",
      "homepage": "https://github.com/pamacea/smite#docs-editor-mcp",
      "repository": "https://github.com/pamacea/smite",
      "bugs": "https://github.com/pamacea/smite/issues",
      "category": "documentation",
      "tags": [
        "mcp",
        "documentation",
        "openapi",
        "swagger",
        "jsdoc",
        "readme",
        "automation"
      ],
      "smite": {
        "minVersion": "1.0.0",
        "type": "mcp-server",
        "protocol": "stdio",
        "entryPoint": "./dist/index.js",
        "configFile": ".smite/docs-config.json",
        "autoInstall": false
      },
      "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4",
        "@types/glob": "^8.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/mdast": "^4.0.4",
        "@types/node": "^22.10.5",
        "@types/unist": "^1.0.0",
        "@typescript-eslint/parser": "^8.19.1",
        "@typescript-eslint/typescript-estree": "^8.19.1",
        "fast-glob": "^3.3.3",
        "glob": "^13.0.0",
        "js-yaml": "^4.1.0",
        "remark-parse": "^11.0.0",
        "remark-stringify": "^11.0.0",
        "typescript": "^5.7.3",
        "unified": "^11.0.5",
        "zod": "^3.24.1"
      },
      "features": [
        "README Architecture Updater - Monitors dependencies and structure",
        "Manual Edit Preservation - Markers to preserve custom content",
        "Diff Generation - Preview changes before applying",
        "OpenAPI/Swagger Sync (Planned)",
        "JSDoc Generator (Planned)"
      ],
      "installation": {
        "type": "npm",
        "location": "plugins/docs-editor-mcp",
        "commands": [
          "cd plugins/docs-editor-mcp",
          "npm install",
          "npm run build"
        ],
        "verification": "test -f dist/index.js"
      },
      "compatibility": {
        "node": ">=18.0.0",
        "typescript": ">=5.0.0",
        "os": ["win32", "darwin", "linux"]
      },
      "documentation": "plugins/docs-editor-mcp/README.md",
      "changelog": [
        {
          "version": "1.0.0",
          "date": "2025-01-19",
          "changes": [
            "Initial release",
            "README architecture updater",
            "Dependency monitoring",
            "Structure scanning",
            "Manual edit preservation with markers",
            "Markdown diff generation"
          ]
        }
      ]
    }
  ],
  "categories": [
    {
      "id": "quality",
      "name": "Quality & Testing",
      "description": "Tools for code quality, testing, and validation"
    },
    {
      "id": "documentation",
      "name": "Documentation",
      "description": "Documentation generation and maintenance tools"
    },
    {
      "id": "automation",
      "name": "Automation",
      "description": "Automation and workflow enhancement tools"
    }
  ]
}
