{
  "name": "toolkit",
  "description": "SMITE Toolkit - Unified token optimization layer with RAG (70-85% savings), mgrep semantic search (2x precision), bug detection, and dependency analysis",
  "version": "1.0.0",
  "author": {
    "name": "Pamacea"
  },
  "commands": "./commands/",
  "skills": "./skills/",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c \"node %USERPROFILE%\\.claude\\plugins\\toolkit-index-hook.js\""
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c \"node %USERPROFILE%\\.claude\\plugins\\toolkit-deps-hook.js\""
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c \"node %USERPROFILE%\\.claude\\plugins\\toolkit-init-hook.js\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c \"node %USERPROFILE%\\.claude\\plugins\\toolkit-save-hook.js\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c \"node %USERPROFILE%\\.claude\\plugins\\toolkit-stats-hook.js\""
          }
        ]
      }
    ]
  }
}
