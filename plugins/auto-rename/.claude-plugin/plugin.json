{
  "$schema": "https://anthropic.com/claude-code/plugin.schema.json",
  "name": "auto-rename",
  "description": "Automatically rename Claude Code sessions based on their content using LLM analysis",
  "version": "3.1.0",
  "author": {
    "name": "Pamacea",
    "email": "[emailÂ protected]"
  },
  "homepage": "https://github.com/Pamacea/smite/tree/main/plugins/auto-rename",
  "repository": "https://github.com/Pamacea/smite",
  "license": "MIT",
  "keywords": ["session", "naming", "automation", "ai", "productivity"],
  "category": "productivity",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/rename-script.js session-start"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/rename-script.js post-tool"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/rename-script.js user-prompt"
          }
        ]
      }
    ]
  }
}
