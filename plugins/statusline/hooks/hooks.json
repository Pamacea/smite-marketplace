{
  "description": "Statusline hooks configuration",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/dist/install.js",
            "description": "Auto-configure statusline on session start"
          }
        ]
      }
    ]
  }
}
