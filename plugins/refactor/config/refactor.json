{
  "defaults": {
    "scope": "recent",
    "riskThreshold": 30,
    "complexityThreshold": 8,
    "coverageTarget": 80,
    "autoCommit": true
  },
  "exclude": [
    "node_modules/**",
    "dist/**",
    ".claude/**",
    "build/**",
    "*.min.js",
    "*.map"
  ],
  "patterns": {
    "enabled": [
      "extract-method",
      "extract-class",
      "introduce-parameter-object",
      "replace-magic-numbers",
      "decompose-conditional",
      "move-method",
      "inline-method"
    ],
    "severity": {
      "high": ["extract-class", "decompose-conditional"],
      "medium": ["extract-method", "introduce-parameter-object"],
      "low": ["replace-magic-numbers", "inline-method", "move-method"]
    }
  },
  "quickMode": {
    "maxRisk": 30,
    "maxComplexity": 8,
    "minCoverage": 80,
    "autoApply": true
  },
  "output": {
    "directory": ".claude/.smite",
    "format": "markdown",
    "timestamps": true
  }
}
