{
  "$schema": "../core/validation/schemas/plugin.schema.json",
  "name": "mobs",
  "description": "Multi-agent orchestration system - Spec-First development workflow with creative design and systematic refactoring",
  "version": "4.1.0",
  "author": {
    "name": "Pamacea",
    "email": "[emailÂ protected]"
  },
  "homepage": "https://github.com/Pamacea/smite/tree/main/plugins/mobs",
  "repository": "https://github.com/Pamacea/smite",
  "license": "MIT",
  "keywords": [
    "agents",
    "workflow",
    "parallel-execution",
    "orchestration",
    "architecture",
    "implementation",
    "qa",
    "exploration",
    "refactoring",
    "code-review",
    "validation",
    "notes",
    "obsidian"
  ],
  "commands": "./commands/",
  "skills": "./skills/",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/detect-vaults.js"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "required": ["core"],
    "optional": ["toolkit", "basics"]
  },
  "mcp": {
    "required": [],
    "optional": [
      "mcp__web-search-prime__webSearchPrime",
      "mcp__4_5v_mcp__analyze_image",
      "mcp__zai-mcp-server__ui_to_artifact",
      "mcp__web-reader__webReader"
    ]
  },
  "config": {
    "schema": "../core/validation/schemas/plugin.schema.json",
    "defaults": {
      "vaultAutoDetect": true,
      "fallbackToManual": true
    }
  }
}
