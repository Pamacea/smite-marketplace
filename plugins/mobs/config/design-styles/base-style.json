{
  "$schema": "../../../core/validation/schemas/design-styles.schema.json",
  "version": "2.0.0",
  "lastUpdated": "2025-01-23",
  "base": {
    "commonComponents": [
      {
        "name": "Button",
        "variants": ["primary", "secondary", "ghost", "link"],
        "sizes": ["sm", "md", "lg"],
        "states": ["default", "hover", "active", "focus", "disabled"]
      },
      {
        "name": "Input",
        "types": ["text", "email", "password", "number", "textarea"],
        "states": ["default", "focus", "error", "disabled"],
        "features": ["label", "helperText", "errorMessage"]
      },
      {
        "name": "Card",
        "variants": ["default", "elevated", "outlined"],
        "sections": ["header", "body", "footer"]
      },
      {
        "name": "Modal",
        "variants": ["default", "fullscreen"],
        "features": ["backdrop", "closeButton", "animation"]
      },
      {
        "name": "Navigation",
        "variants": ["horizontal", "vertical", "sidebar"],
        "features": ["dropdown", "megaMenu", "breadcrumb"]
      }
    ],
    "defaultBreakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "defaultTypographyScale": {
      "display": { "size": "56px", "weight": "700", "lineHeight": "1.1" },
      "h1": { "size": "44px", "weight": "700", "lineHeight": "1.2" },
      "h2": { "size": "34px", "weight": "600", "lineHeight": "1.3" },
      "h3": { "size": "26px", "weight": "600", "lineHeight": "1.3" },
      "h4": { "size": "20px", "weight": "600", "lineHeight": "1.4" },
      "body": { "size": "16px", "weight": "400", "lineHeight": "1.5" },
      "small": { "size": "14px", "weight": "400", "lineHeight": "1.5" },
      "caption": { "size": "12px", "weight": "400", "lineHeight": "1.3" }
    },
    "defaultStatusColors": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "defaultSpacing": {
      "baseUnit": "4px",
      "scale": [0, 4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80]
    }
  }
}
