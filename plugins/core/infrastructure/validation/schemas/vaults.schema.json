{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smite.dev/schemas/vaults.json",
  "title": "Obsidian Vaults Configuration",
  "description": "Schema for vaults.json multi-vault configuration",
  "type": "object",
  "required": ["vaults"],
  "properties": {
    "vaults": {
      "type": "array",
      "description": "List of configured Obsidian vaults",
      "items": {
        "$ref": "#/definitions/vault"
      }
    },
    "defaultVault": {
      "type": "string",
      "description": "Name of the default vault to use when none specified"
    },
    "autoDetect": {
      "type": "boolean",
      "default": true,
      "description": "Whether to auto-detect vaults from parent directories"
    }
  },
  "definitions": {
    "vault": {
      "type": "object",
      "required": ["name", "path"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique identifier for this vault"
        },
        "path": {
          "type": "string",
          "description": "Absolute or relative path to the vault directory"
        },
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether this vault is active"
        },
        "priority": {
          "type": "integer",
          "default": 0,
          "description": "Priority for vault selection (higher = preferred)"
        },
        "folders": {
          "type": "object",
          "description": "Custom folder mappings for this vault",
          "properties": {
            "inbox": { "type": "string" },
            "projects": { "type": "string" },
            "resources": { "type": "string" }
          }
        },
        "templates": {
          "type": "object",
          "description": "Custom template paths for this vault",
          "properties": {
            "inbox": { "type": "string" },
            "project": { "type": "string" },
            "meeting": { "type": "string" },
            "technical": { "type": "string" },
            "resource": { "type": "string" }
          }
        }
      }
    }
  }
}
